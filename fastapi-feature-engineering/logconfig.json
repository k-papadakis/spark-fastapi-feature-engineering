{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "default": {
      "format": "%(asctime)s - %(name)s - %(funcName)s - %(levelname)s: %(message)s"
    }
  },
  "handlers": {
    "rotating": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "NOTSET",
      "formatter": "default",
      "filename": "app.log",
      "mode": "a",
      "maxBytes": 10000000,
      "backupCount": 10
    }
  },
  "root": {
    "level": "INFO",
    "handlers": [
      "rotating"
    ]
  }
}